<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bg_new_one">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rltv_prepaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgimps"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/imps"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Prepaid"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@+id/imgimps"
                            android:textColor="@color/black"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_go"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_dth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/imgneft"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/neft"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="DTH"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@+id/imgneft"
                            android:textColor="@color/black"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_go"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_landline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/imgrtgs"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/rtgs"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="LandLine"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@+id/imgrtgs"
                            android:textColor="@color/black"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_go"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_postpaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/imgpostpaid"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/quick_pay"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Post Paid"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@+id/imgpostpaid"
                            android:textColor="@color/black"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_go"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_datacard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/imgquickpay"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/quick_pay"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Data Card"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@+id/imgquickpay"
                            android:textColor="@color/black"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:tint="@color/black"
                            app:srcCompat="@drawable/ic_go"/>


                    </RelativeLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>