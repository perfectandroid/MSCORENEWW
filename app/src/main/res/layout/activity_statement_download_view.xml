<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/grey">
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/grey">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/grey"
              android:orientation="vertical"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentStart="true">
              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:background="@drawable/frontcard">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left"
                      android:gravity="left"
                      android:paddingBottom="15dp"
                      android:orientation="vertical" >
                      <TextView
                          android:id="@+id/tv_accselection"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="40dp"
                          android:layout_marginTop="10dp"
                          android:buttonTint="@color/blue_variant2"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:text="Select Account"
                          android:layout_gravity="left"
                          android:gravity="center_vertical"
                          android:drawableRight="@drawable/arr1"
                          android:textColor="@color/black"
                          android:textStyle="bold" />

                      <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="left"
                      android:gravity="left"
                      android:orientation="horizontal" >
                      <TextView
                          android:id="@+id/tv_acc_selection"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="25dp"
                          android:drawableTint="@color/Black"
                          android:gravity="center_vertical"
                          android:visibility="gone"
                          android:layout_marginTop="5dp"
                          android:layout_marginRight="25dp"
                          android:paddingLeft="45dp"
                          android:background="@drawable/select_acnt_bg"
                          android:textSize="18sp" />
                      <TextView
                          android:id="@+id/tv_acc_selection1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          android:visibility="gone"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="40dp"
                          android:drawableRight="@drawable/arr1"
                          android:drawableTint="@color/Black"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:text="Select Account"
                          android:textColor="@color/blue_variant1"
                          android:textSize="18sp" />
                      <TextView
                          android:id="@+id/tv_acc_selection2"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          android:visibility="gone"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="40dp"
                          android:drawableRight="@drawable/arr1"
                          android:drawableTint="@color/Black"
                          android:gravity="center_vertical"
                          android:background="@color/white"
                          android:text="Select Account"
                          android:textColor="@color/blue_variant1"
                          android:textSize="18sp" />
                  </LinearLayout>
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="1dp"
                  android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/grey"
                      android:orientation="vertical"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentStart="true">


                      <androidx.cardview.widget.CardView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="10dp"
                          android:background="@drawable/frontcard">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="left"
                              android:gravity="left"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:orientation="vertical" >
                              <RadioButton
                                  android:id="@+id/rb1"
                                  android:layout_marginLeft="10dp"
                                  android:buttonTint="@color/blue_variant2"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Select Month"
                                  android:textColor="@color/black"
                                  android:textStyle="bold"
                                  />

                              <Spinner
                                  android:id="@+id/s_month"
                                  android:layout_width="match_parent"
                                  android:layout_marginLeft="25dp"
                                  android:layout_marginRight="25dp"
                                  android:paddingLeft="40dp"
                                  android:background="@drawable/edt3"
                                  android:layout_height="wrap_content"
                                  android:visibility="gone"
                                  />


                          </LinearLayout>
                      </androidx.cardview.widget.CardView>

                      <androidx.cardview.widget.CardView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="10dp"
                          android:paddingBottom="10dp"
                          android:background="@drawable/frontcard">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">
                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="left"
                              android:gravity="left"
                              android:layout_marginTop="20dp"
                              android:orientation="vertical" >
                              <RadioButton
                                  android:id="@+id/rb2"
                                  android:layout_marginLeft="10dp"
                                  android:buttonTint="@color/blue_variant2"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Select Dates"
                                  android:textColor="@color/black"
                                  android:textStyle="bold"
                                  />

                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="left"
                              android:id="@+id/l0"
                              android:visibility="gone"
                              android:gravity="left"
                              android:layout_marginTop="5dp"
                              android:orientation="horizontal" >

                              <TextView
                                  android:id="@+id/txtv_From"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:layout_marginLeft="30dp"
                                  android:layout_marginRight="15dp"
                                  android:text="From Date"
                                  android:textColor="@color/gray"
                                  android:textStyle="bold" />
                              <TextView
                                  android:id="@+id/txtv_To"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:layout_marginRight="30dp"
                                  android:layout_marginLeft="10dp"
                                  android:text="To Date"
                                  android:textColor="@color/gray"
                                  android:textStyle="bold" />
                              <!--  <Spinner
                                    android:id="@+id/imgv_month"
                                    android:layout_width="0dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    />-->


                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:id="@+id/l1"
                              android:visibility="gone"
                              android:layout_marginTop="5dp">
                              <EditText
                                  android:id="@+id/etxtFrom"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:hint="From Date"
                                  android:layout_marginLeft="25dp"
                                  android:layout_marginRight="10dp"
                                  android:paddingLeft="20dp"
                                  android:background="@drawable/edt3"
                                  android:layout_weight="1"></EditText>
                              <EditText
                                  android:id="@+id/etxtTo"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:hint="To Date"
                                  android:layout_marginLeft="10dp"
                                  android:layout_marginRight="25dp"
                                  android:paddingLeft="20dp"
                                  android:background="@drawable/edt3"
                                  android:layout_weight="1"></EditText>
                          </LinearLayout>
                      </LinearLayout>
                      </androidx.cardview.widget.CardView>
                      <!--   <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="10dp"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:layout_marginBottom="10dp"
                             android:background="@color/white"
                             android:orientation="vertical">
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">

                                 <EditText
                                     android:id="@+id/etxt_acc"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginLeft="20dp"
                                     android:layout_marginRight="10dp"
                                     android:hint=""
                                     android:visibility="gone"
                                     android:padding="5dp"/>

                             </LinearLayout>






                         </LinearLayout>-->

                  </LinearLayout>
              </RelativeLayout>


          </LinearLayout>
      </ScrollView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal"
          android:layout_alignParentBottom="true"
          android:weightSum="1">

          <TextView
              android:id="@+id/tv_view"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight=".5"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="5dp"
              android:background="@drawable/bg_unselect"
              android:textColor="@color/RoyalBlue"
              android:gravity="center"
              android:text="View"/>
          <View
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginBottom="7dp"
              android:layout_marginTop="7dp"
              android:layout_weight=".005"
              android:background="#fff" />

          <TextView
              android:id="@+id/tv_download"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight=".5"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="10dp"
              android:background="@drawable/bg_select"
              android:gravity="center"
              android:textColor="@color/white"
              android:text="Download"/>
      </LinearLayout>

  </RelativeLayout>

</LinearLayout>