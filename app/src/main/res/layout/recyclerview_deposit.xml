        android:paddingLeft="20dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txtv_accno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"
