    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/txtv_loantype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ruppe"
            android:text=""/>

        <ImageView
            android:id="@+id/imgv_details"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:background="@drawable/arrow"/>
        <TextView
            android:id="@+id/imgv_details1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginRight="0dp"
            android:visibility="visible"
            android:backgroundTint="@color/black_alpha"
            android:background="@drawable/ic_arrow_right_white"/>

    </LinearLayout>
